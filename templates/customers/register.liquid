{% layout none %}
<section class="of-container" style="padding:40px 0;color:#fff;">
  <h1>Criar conta</h1>
  {% form 'create_customer' %}
    {{ form.errors | default_errors }}
    <input type="text" name="customer[first_name]" placeholder="Nome">
    <input type="text" name="customer[last_name]" placeholder="Sobrenome">
    <input type="email" name="customer[email]" placeholder="E-mail" required>
    <input type="password" name="customer[password]" placeholder="Senha" required>
    <button type="submit" class="btn btn--primary">Criar</button>
  {% endform %}
</section>
